<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="at.fhhgbg.mc.profileswitcher"
    android:versionCode="2"
    android:versionName="0.2" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.WRITE_SETTINGS" />
    <!-- <uses-permission android:name="android.permission.DISABLE_KEYGUARD" /> -->
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.NFC" />
    <uses-permission android:name="android.permission.ACCESS_SUPERUSER" />

    <!-- make sure to ignore the error message here, so the project can be build -->
    <!-- to do so in eclipse just change Window -> Preferences -> Android -> Lint Error Checking -> ProtectedPermission to something less severe -->
    <!-- this permission is needed so that some of the system-app -->
    <uses-permission android:name="android.permission.WRITE_SECURE_SETTINGS" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/profile_switcher_icon_holo"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="at.fhhgbg.mc.profileswitcher.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="at.fhhgbg.mc.profileswitcher.ListDialogActivity"
            android:excludeFromRecents="true"
            android:launchMode="singleInstance"
            android:theme="@style/Theme.Transparent"
            android:title="@string/title_activity_list_dialog" >
        </activity>
        <activity
            android:name="at.fhhgbg.mc.profileswitcher.ProfileEditActivity"
            android:label="@string/title_activity_profile_edit" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="at.fhhgbg.mc.profileswitcher.MainActivity" />
        </activity>
        <activity
            android:name="at.fhhgbg.mc.profileswitcher.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName="at.fhhgbg.mc.profileswitcher.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="at.fhhgbg.mc.profileswitcher.MainActivity" />
        </activity>

        <receiver android:name="at.fhhgbg.mc.profileswitcher.widgets.PopUpWidget" >
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/widget_pop_up" />
        </receiver>
        <receiver android:name="at.fhhgbg.mc.profileswitcher.widgets.ListWidget" >
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/widget_list" />
        </receiver>
        <receiver android:name="at.fhhgbg.mc.profileswitcher.BootCompletedReceiver" >
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

        <service
            android:name="at.fhhgbg.mc.profileswitcher.widgets.ListWidgetService"
            android:permission="android.permission.BIND_REMOTEVIEWS" >
        </service>
        <service android:name="at.fhhgbg.mc.profileswitcher.AutostartService" >
        </service>

        <activity
            android:name="at.fhhgbg.mc.profileswitcher.widgets.WidgetActivity"
            android:excludeFromRecents="true"
            android:launchMode="singleInstance"
            android:theme="@style/Theme.Transparent"
            android:title="@string/title_activity_list_dialog" >
        </activity>
        <activity
            android:name="at.fhhgbg.mc.profileswitcher.NfcWriterActivity"
            android:label="@string/title_activity_nfc_writer"
            android:parentActivityName="at.fhhgbg.mc.profileswitcher.ProfileEditActivity" >
        </activity>
        <activity
            android:name="at.fhhgbg.mc.profileswitcher.NfcReaderActivity"
            android:excludeFromRecents="true"
            android:label="@string/title_activity_nfc_reader"
            android:launchMode="singleInstance"
            android:theme="@style/Theme.Transparent" >
            <intent-filter>
                <action android:name="android.nfc.action.NDEF_DISCOVERED" />

                <data android:mimeType="application/at.fhhgbg.mc.profileswitcher" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="at.fhhgbg.mc.profileswitcher.AboutActivity"
            android:label="@string/title_activity_about"
            android:parentActivityName="at.fhhgbg.mc.profileswitcher.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="at.fhhgbg.mc.profileswitcher.MainActivity" />

            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
            </intent-filter>
        </activity>
        <activity
            android:name="at.fhhgbg.mc.profileswitcher.ProfileFragment"
            android:label="@string/title_activity_profile_fragment"
            android:parentActivityName="Fragment" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="Fragment" />
        </activity>
        <activity
            android:name="at.fhhgbg.mc.profileswitcher.TriggerFragment"
            android:label="@string/title_activity_trigger_fragment" >
        </activity>
    </application>

</manifest>
